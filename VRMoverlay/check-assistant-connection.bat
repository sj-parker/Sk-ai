@echo off
echo ========================================
echo Проверка подключения к ассистенту
echo ========================================
echo.

echo Проверяем доступность порта 31992...
netstat -an | findstr :31992
if %errorlevel% equ 0 (
    echo ✅ Порт 31992 активен
) else (
    echo ❌ Порт 31992 не найден
)

echo.
echo Проверяем доступность порта 31993...
netstat -an | findstr :31993
if %errorlevel% equ 0 (
    echo ✅ Порт 31993 активен
) else (
    echo ❌ Порт 31993 не найден
)

echo.
echo Проверяем IP адрес 192.168.1.4...
ping -n 1 192.168.1.4
if %errorlevel% equ 0 (
    echo ✅ IP адрес 192.168.1.4 доступен
) else (
    echo ❌ IP адрес 192.168.1.4 недоступен
)

echo.
echo ========================================
echo Проверка завершена
echo ========================================
pause 